<rs:TSDUserControl  xmlns:rs="clr-namespace:eThanhTra.Resource;assembly=eThanhTra.Resource"
                    x:Class="eThanhTra.ucoQuanLyNhatKy"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:local="clr-namespace:eThanhTra" 
                    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" 
                    xmlns:dxemvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
                    mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1000" Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        
        <DockPanel Grid.Row="0" Margin="0,0,0,4" LastChildFill="True">
            <rs:hDateEdit EditValue="{Binding _Model.NgayCongBoTu, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" DockPanel.Dock="Left" _CaptionText="Ngày công bố:" DisplayFormatString="dd/MM/yyyy" Width="100" VerticalAlignment="Bottom" Height="50" Margin="0,0,4,0" EditValueChangedCommand="{Binding LoadViewCommand}"/>
            <TextBlock DockPanel.Dock="Left" Text="~" VerticalAlignment="Bottom" Margin="2,0,2,8"/>
            <rs:hDateEdit EditValue="{Binding _Model.NgayCongBoDen, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" DockPanel.Dock="Left" Width="100" VerticalAlignment="Bottom" Height="30" Margin="4,0,8,0" EditValueChangedCommand="{Binding LoadViewCommand}"/>
            
            <!--<rs:hListBoxEdit DockPanel.Dock="Left" _CaptionText="Trạng thái" VerticalAlignment="Bottom" Height="50" Padding="4,4,0,0">
                <dxe:ListBoxEdit.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </dxe:ListBoxEdit.ItemsPanel>
                
                <dxe:ListBoxEdit.StyleSettings >
                    <dxe:CheckedListBoxEditStyleSettings ShowSelectAllItem="True" SelectAllItemText="Tất cả trạng thái" />
                </dxe:ListBoxEdit.StyleSettings>
                <dxe:ListBoxEdit.Items>
                    <dxe:ListBoxEditItem Content="Chờ công bố" IsSelected="{Binding _Model.IsChoCongBo, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Margin="4,0,4,0"/>
                    <dxe:ListBoxEditItem Content="Đang tiến hành" IsSelected="{Binding _Model.IsDangTienHanh, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Margin="4,0,4,0"/>
                    <dxe:ListBoxEditItem Content="Đã kết thúc"  IsSelected="{Binding _Model.IsDaKetThuc, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Margin="4,0,8,0"/>
                </dxe:ListBoxEdit.Items>
            </rs:hListBoxEdit>-->

            <rs:hListBoxEdit DockPanel.Dock="Left" _CaptionText="Trạng thái" ItemsSource="{Binding _Model.ListTrangThai}" DisplayMember="Ma" ValueMember="Ten"  VerticalAlignment="Bottom" Height="50" Padding="4,2,4,0" ScrollViewer.VerticalScrollBarVisibility="Disabled">
                
                <dxe:ListBoxEdit.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </dxe:ListBoxEdit.ItemsPanel>
                
                <rs:hListBoxEdit.ItemTemplate>
                    <DataTemplate>
                        <dxe:CheckEdit Content="{Binding Ten}" IsChecked="{Binding IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="4,0,4,0">
                            <dxemvvm:Interaction.Behaviors>
                                <dxemvvm:EventToCommand EventName="EditValueChanged" Command="{Binding DataContext.LoadViewCommand, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=rs:TSDUserControl}}" />
                            </dxemvvm:Interaction.Behaviors>
                        </dxe:CheckEdit>
                    </DataTemplate>
                </rs:hListBoxEdit.ItemTemplate>
            </rs:hListBoxEdit>

            <rs:hTextEdit Text="{Binding _Model.MST, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" DockPanel.Dock="Left" Margin="8,0,0,0" _CaptionText="MST:" Height="50" VerticalAlignment="Bottom" Width="100"></rs:hTextEdit>
            
            <dx:SimpleButton DockPanel.Dock="Right" Content="Tìm kiếm" Glyph="{dx:DXImage Image=Filter_16x16.png}" HorizontalAlignment="Right" Command="{Binding LoadViewCommand}"/>
            <rs:hTextEdit Text="{Binding _Model.TenNNT, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" DockPanel.Dock="Left" Margin="8,0,8,0" _CaptionText="Tên NNT:" Height="50" VerticalAlignment="Bottom"></rs:hTextEdit>
        </DockPanel>


        <dxg:GridControl Grid.Row="1" ItemsSource="{Binding _Model.ListThanhTra, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
            <dxg:GridControl.View>
                <dxg:TableView AllowEditing="False"/>
            </dxg:GridControl.View>
            <dxg:GridControl.Columns>
                <dxg:GridColumn  Header="STT" FieldName="STT"  Width="50" Fixed="Left" VisibleIndex="0">
                    <dxg:GridColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding RowData.RowHandle.Value, Converter={StaticResource STTConverter}}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </DataTemplate>
                    </dxg:GridColumn.CellTemplate>
                </dxg:GridColumn>
                
                <dxg:GridColumn Header="MST" FieldName="MST" Width="120" Fixed="Left" VisibleIndex="1"/>
                <dxg:GridColumn Header="Tên NNT" FieldName="TenNNT" Width="400" Fixed="Left" VisibleIndex="2">
                    <dxg:GridColumn.EditSettings>
                        <dxe:TextEditSettings TextWrapping="WrapWithOverflow"/>
                    </dxg:GridColumn.EditSettings>
                </dxg:GridColumn>
                <dxg:GridColumn Header="Mã CQT" FieldName="MaCQT" Width="100"/>
                <dxg:GridColumn Header="Tên CQT" FieldName="TenCQT" Width="300"/>
                <dxg:GridColumn Header="Trạng thái" FieldName="TrangThaiText" Width="100"/>
                <dxg:GridColumn Header="Mã Trưởng đoàn" FieldName="UserNameTDTT" Width="100"/>
                <dxg:GridColumn Header="Trưởng đoàn" FieldName="TenTruongDoan" Width="150"/>
            </dxg:GridControl.Columns>
        </dxg:GridControl>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <dx:SimpleButton Content="Thêm mới cuộc Thanh tra" Glyph="{dx:DXImage Image=AddItem_16x16.png}" Margin="2,4,2,0" Command="{Binding ShowThemMoiNhatKyCommand}" />
            <dx:SimpleButton Content="Đóng" Glyph="{dx:DXImage Image=Close_16x16.png}" Margin="2,4,0,0" Command="{Binding CloseViewCommand}"/>
        </StackPanel>
    </Grid>
</rs:TSDUserControl>
